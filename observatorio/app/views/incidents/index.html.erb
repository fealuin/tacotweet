<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap 101 Template</title>

    <!-- Bootstrap -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <script type="text/javascript" charset="utf-8">

var locations=[
<% len=@incident_map.length%>
 <%  desc=""%>
<% @incident_map.each_with_index do |incident_map,index| %>
<%  if(incident_map.itype_id==2) %>
<%      desc="Accidente" %>
<%    else %>
<%      desc="Taco"%>
<%end%>
  ["<%= desc =%> <%=incident_map.text.chars.select{|i| i.valid_encoding?}.join.delete("\n") =%>",<%= incident_map.latitude =%>,<%= incident_map.longitude =%>,<%=incident_map.id=%>]
  <%if index+1!=len%>
  <%= "," =%>
  <% end %>
<%end%>

];

</script>


  </head>
  <body>

    <div align="center" ><h1> Observatorio </h1><br></div>
    <div id="orders_chart" style="width: 560px; height: 300px;"></div>

    
    <h2>Mapa Tacos y Accidentes</h2>
    <div id="map-container">
      <div id="map-canvas"></div>
    </div>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="js/bootstrap.min.js"></script>
    <script type="text/javascript" charset="utf-8">  
      $(function () {  
        new Highcharts.Chart({
          chart: {
            renderTo: 'orders_chart',
            type: 'column'
          },
          title: {
              text: 'Estadistica'
          },
          subtitle: {
              text: 'TacoTweet'
          },
          xAxis: {
              categories: [


<% len=@incident_fechas.length %>
<% @incident_fechas.each_with_index do |incident_fechas,index| %>
  '<%= incident_fechas.created_at =%>'
  <%if index+1!=len%>
  <%= "," =%>
  <% end %>
<%end%>




 
              ]
          },
          yAxis: {
              min: 0,
              title: {
                  text: 'Cantidad'
              }
          },
          tooltip: {
              headerFormat: '<span style="font-size:10px">{point.key}</span><table>',
              pointFormat: '<tr><td style="color:{series.color};padding:0">{series.name}: </td>' +
                  '<td style="padding:0"><b>{point.y:.1f} </b></td></tr>',
              footerFormat: '</table>',
              shared: true,
              useHTML: true
          },
          plotOptions: {
              column: {
                  pointPadding: 0.2,
                  borderWidth: 0
              }
          },
          series: [{
              name: 'Accidente',
              data: [
<% len=@incident_accidentes.length %>
<% @incident_accidentes.each_with_index do |incident_accidentes,index| %>
  <%= incident_accidentes[1] =%>
  <%if index+1!=len%>
  <%= "," =%>
  <% end %>
<%end%>

                    ]

          }, {
              name: 'Taco',
              data: [
<% len=@incident_taco.length %>
<% @incident_taco.each_with_index do |incident_taco,index| %>
  <%= incident_taco[1] =%>
  <%if index+1!=len%>
  <%= "," =%>
  <% end %>
<%end%>

]

          }]
          
        });  
      }); 
    </script>
  </body>
</html>
